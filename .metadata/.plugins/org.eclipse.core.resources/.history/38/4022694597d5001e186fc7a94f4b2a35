package aula_LPA;

import java.util.Scanner;

public class CustoCombustivel {

	public static void main(String[] args) {
		double valorLitro,kmPercorrido,mediaConsumo;
		
		Scanner ler= new Scanner(System.in);
		
		System.out.println("Informe a distancia do percurso:");
		kmPercorrido=ler.nextDouble();
		
		System.out.println("Informe a m√©dia de consumo por litro:");
		mediaConsumo=ler.nextDouble();
		
		double autonomia=kmPercorrido/mediaConsumo;
		
		System.out.println("A quantidade de litros gastos na viagem:\n"+autonomia);
		
		/*
